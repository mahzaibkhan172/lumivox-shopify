<div class="lumivox-why-replace gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width section-{{ section.id }}-padding">
    {% if section.settings.title != blank %}
      <h2 class="lumivox-why-replace__title center">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="lumivox-why-replace__grid">
      {% for block in section.blocks %}
        <div class="lumivox-why-replace__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="lumivox-why-replace__icon">{{ block.settings.icon }}</div>
          {% endif %}
          {% if block.settings.title != blank %}
            <h3 class="h4">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.cta_text != blank %}
      <div class="lumivox-why-replace__cta center">
        <a href="{{ section.settings.cta_link }}" class="link">
          {{ section.settings.cta_text }} ‚Üí
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .lumivox-why-replace {
    padding: 5rem 0;
  }
  .lumivox-why-replace__title {
    margin-bottom: 3rem;
  }
  .lumivox-why-replace__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    margin-bottom: 2rem;
  }
  .lumivox-why-replace__item {
    text-align: center;
  }
  .lumivox-why-replace__icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .lumivox-why-replace__item h3 {
    margin-bottom: 0.5rem;
  }
  .lumivox-why-replace__cta {
    margin-top: 2rem;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

