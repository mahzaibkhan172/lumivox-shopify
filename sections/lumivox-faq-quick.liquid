{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

<div class="lumivox-faq-quick gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width section-{{ section.id }}-padding">
    {% if section.settings.title != blank %}
      <h2 class="lumivox-faq-quick__title center">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="lumivox-faq-quick__accordion">
      {% for block in section.blocks %}
        <details class="accordion" {{ block.shopify_attributes }}>
          <summary>
            <div class="summary__title">
              <h3 class="h5">{{ block.settings.question }}</h3>
            </div>
            <svg aria-hidden="true" focusable="false" class="icon icon-caret" viewBox="0 0 10 6">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
            </svg>
          </summary>
          <div class="accordion__content rte">
            {{ block.settings.answer }}
          </div>
        </details>
      {% endfor %}
    </div>

    {% if section.settings.cta_text != blank %}
      <div class="lumivox-faq-quick__cta center">
        <a href="{{ section.settings.cta_link }}" class="button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .lumivox-faq-quick {
    padding: 4rem 0;
  }
  .lumivox-faq-quick__title {
    margin-bottom: 3rem;
  }
  .lumivox-faq-quick__accordion {
    max-width: 800px;
    margin: 0 auto;
  }
  .lumivox-faq-quick__accordion .accordion {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }
  .lumivox-faq-quick__accordion summary {
    padding: 1.5rem 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .lumivox-faq-quick__accordion .accordion__content {
    padding-bottom: 1.5rem;
  }
  .lumivox-faq-quick__cta {
    margin-top: 3rem;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {% for block in section.blocks %}
      {
        "@type": "Question",
        "name": {{ block.settings.question | json }},
        "acceptedAnswer": {
          "@type": "Answer",
          "text": {{ block.settings.answer | strip_html | json }}
        }
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
</script>

{% schema %}
{
  "name": "FAQ Rapide",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Questions fréquentes"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texte CTA",
      "default": "Voir toutes les questions"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Lien CTA"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Schéma de couleurs",
      "default": "scheme-2"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding haut"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "label": "Padding bas"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "Question",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Un projecteur peut-il remplacer ma TV au quotidien ?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Réponse",
          "default": "<p>Oui, nos projecteurs sont conçus pour un usage quotidien avec une durée de vie de 50 000 heures.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Rapide"
    }
  ]
}
{% endschema %}
