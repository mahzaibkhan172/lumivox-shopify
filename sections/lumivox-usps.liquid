<div class="lumivox-usps gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width section-{{ section.id }}-padding">
    {% if section.settings.title != blank %}
      <h2 class="lumivox-usps__title center">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="lumivox-usps__grid">
      {% for block in section.blocks %}
        <div class="lumivox-usps__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="lumivox-usps__icon">{{ block.settings.icon }}</div>
          {% endif %}
          <div class="lumivox-usps__content">
            {% if block.settings.title != blank %}
              <h3 class="h5">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="caption">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .lumivox-usps {
    padding: 4rem 0;
  }
  .lumivox-usps__title {
    margin-bottom: 3rem;
  }
  .lumivox-usps__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  .lumivox-usps__item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  .lumivox-usps__icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  .lumivox-usps__content h3 {
    margin-bottom: 0.25rem;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

