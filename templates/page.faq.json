    "faq_filters": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "<div class=\"page-width\">\n  <div class=\"faq-filters\">\n    <button class=\"faq-filter active\" data-category=\"all\">Tous</button>\n    <button class=\"faq-filter\" data-category=\"produit\">Produit</button>\n    <button class=\"faq-filter\" data-category=\"livraison\">Livraison</button>\n    <button class=\"faq-filter\" data-category=\"garantie\">Garantie</button>\n    <button class=\"faq-filter\" data-category=\"installation\">Installation</button>\n    <button class=\"faq-filter\" data-category=\"utilisation\">Utilisation</button>\n  </div>\n</div>\n\n<style>\n.faq-filters {\n  display: flex;\n  gap: 1rem;\n  flex-wrap: wrap;\n  justify-content: center;\n  margin: 2rem 0;\n}\n.faq-filter {\n  padding: 0.75rem 1.5rem;\n  border: 1px solid rgba(var(--color-foreground), 0.2);\n  background: transparent;\n  border-radius: 50px;\n  cursor: pointer;\n  transition: all 0.2s;\n}\n.faq-filter:hover,\n.faq-filter.active {\n  background: rgb(var(--color-button));\n  color: rgb(var(--color-button-text));\n  border-color: rgb(var(--color-button));\n}\n</style>\n\n<script>\ndocument.addEventListener('DOMContentLoaded', function() {\n  const filters = document.querySelectorAll('.faq-filter');\n  const faqItems = document.querySelectorAll('.faq-item');\n  \n  filters.forEach(filter => {\n    filter.addEventListener('click', function() {\n      const category = this.dataset.category;\n      \n      filters.forEach(f => f.classList.remove('active'));\n      this.classList.add('active');\n      \n      faqItems.forEach(item => {\n        if (category === 'all' || item.dataset.category === category) {\n          item.style.display = 'block';\n        } else {\n          item.style.display = 'none';\n        }\n      });\n    });\n  });\n});\n</script>",
        "color_scheme": "scheme-1",
        "padding_top": 0,
        "padding_bottom": 20
      }
